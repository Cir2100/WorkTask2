<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.info.InfoFragment">


    <ImageView
        android:id="@+id/character_info_image_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/character_info_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/character_info_image_view"
        app:layout_constraintTop_toTopOf="@id/character_info_image_view"/>

    <TextView
        android:id="@+id/character_info_species"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="@id/character_info_name"
        app:layout_constraintTop_toBottomOf="@id/character_info_name"/>

    <TextView
        android:id="@+id/character_info_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="@id/character_info_name"
        app:layout_constraintTop_toBottomOf="@id/character_info_species" />

    <TextView
        android:id="@+id/character_info_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="@id/character_info_name"
        app:layout_constraintTop_toBottomOf="@id/character_info_gender" />

    <TextView
        android:id="@+id/character_info_episodes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="@id/character_info_name"
        app:layout_constraintTop_toBottomOf="@id/character_info_status" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>